@using BusinessModel.Home
@model HomeModel

<div>
    <h1>Edit Information</h1>
    <form method="post">
        <div class="row form-group">
            <div class="col-md-4">
                <label>Name</label>
                <input type="text"  name="BrandName" value="@Model.BrandName" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Amount</label>
                <input type="number"  disabled name="Availability" value="@Model.Availability" class="form-control" />
            </div>
        </div>
        <div>
            <input type="submit" value="BUY" class="btn btn-success" />
            <a href="/Home/Index" class="btn btn-primary">Back</a>
        </div>
    </form>
</div>
